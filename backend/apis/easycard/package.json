{
  "name": "@hiilo/easycard",
  "version": "1.0.0",
  "description": "EasyCard Payment Service API Client",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "generate": "openapi-generator-cli generate -c openapi-generator.config.yaml --skip-validate-spec",
    "clean": "rm -rf src/generated",
    "regenerate": "bun run clean && bun run generate",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:prism": "concurrently -k -s first \"bun run mock:server\" \"wait-on http://localhost:4012 && vitest run\"",
    "mock:server": "prism mock ./easycard-spec.yaml -p 4012 --dynamic",
    "mock:server:verbose": "prism mock ./easycard-spec.yaml -p 4012 --dynamic --verbose"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "cross-fetch": "^4.0.0",
    "envalid": "^8.0.0",
    "qs": "^6.14.0"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.13.4",
    "@stoplight/prism-cli": "^5.8.1",
    "@types/node": "^20.11.5",
    "@types/qs": "^6.14.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "wait-on": "^7.2.0"
  }
}