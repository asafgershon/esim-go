{
  "name": "@esim-go/rules-engine",
  "version": "1.0.0",
  "description": "Pure pricing rules engine for eSIM Go",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "bun tsc -p tsconfig.build.json",
    "dev": "bun tsc --watch",
    "clean": "rm -rf dist",
    "codegen": "graphql-codegen",
    "generate": "graphql-codegen",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@esim-go/utils": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.2.0",
    "@types/node": "^20.0.0",
    "vitest": "^1.6.0",
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-resolvers": "^4.5.1"
  },
  "keywords": [
    "esim-go",
    "pricing",
    "rules-engine",
    "typescript"
  ]
}