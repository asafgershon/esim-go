{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd server && bun install --frozen-lockfile"
  },
  "deploy": {
    "startCommand": "cd server/workers && bun run start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "services": [
    {
      "name": "esim-go-workers",
      "source": {
        "repo": "."
      },
      "variables": {
        "NODE_ENV": "production",
        "LOG_LEVEL": "info",
        "WORKER_CONCURRENCY": "5",
        "SYNC_INTERVAL": "0 0 * * *",
        "STUCK_JOB_THRESHOLD": "60",
        "CLEANUP_OLD_JOBS_DAYS": "30"
      }
    }
  ]
}