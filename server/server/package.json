{
  "name": "@hiilo/apollo-server",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "codegen": "graphql-codegen",
    "codegen:watch": "graphql-codegen --watch",
    "codegen:dbtypes": "bunx supabase gen types typescript --project-id \"dgkyjkzkwzmjjurzvcxy\" --schema public > src/database.types.ts || echo \"Skipping Supabase codegen (no token available)\"",
    "build": "bun run codegen || echo 'Codegen completed with warnings'",
    "dev": "bun run --watch src/app.ts",
    "dev:server": "bun run --watch src/app.ts",
    "debug": "bun --inspect --watch src/app.ts",
    "start": "bun run build && bun run src/app.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --exclude '**/*.integration.test.ts'",
    "test:integration": "USE_PRISM_MOCK=true vitest run '**/*.integration.test.ts'",
    "test:prism": "USE_PRISM_MOCK=true vitest run",
    "test:email": "bun run src/scripts/test-email-delivery.ts",
    "mock:easycard": "cd packages/easycard-client && bun run mock:server",
    "mock:esim": "cd packages/esim-go-client && bun run mock:server",
    "test:easycard": "bun run src/services/payment/test-easycard-token.ts",
    "test:easycard:vitest": "vitest run src/services/payment/__tests__/easycard.e2e.test.ts",
    "test:easycard:token": "bun run src/services/payment/test-easycard-token.ts",
    "email:preview": "bun run src/scripts/preview-email-template.ts",
    "email:watch": "bun run src/scripts/watch-email-template.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.cache",
    "postinstall": "bun run codegen && bun run codegen:dbtypes"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-resolvers": "^4.5.1",
    "@parcel/watcher": "^2.5.1",
    "@types/bun": "latest",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/qrcode": "^1.5.5",
    "@vitest/ui": "^3.2.4",
    "dotenv": "^17.2.0",
    "@types/byte-size": "^8.1.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@airhalo/client": "workspace:*",
    "@hiilo/easycard-client": "workspace:*",
    "@apollo/datasource-rest": "^6.4.1",
    "@apollo/server": "^4.12.2",
    "@apollo/utils.keyvadapter": "^4.0.1",
    "@aws-sdk/client-ses": "^3.855.0",
    "@graphql-tools/merge": "^9.1.1",
    "@hiilo/client": "workspace:*",
    "@hiilo/rules-engine-2": "workspace:*",
    "@hiilo/utils": "workspace:*",
    "@keyv/redis": "^4.6.0",
    "@supabase/supabase-js": "^2.47.10",
    "@types/cors": "^2.8.19",
    "@types/email-templates": "^10.0.4",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.18.1",
    "bullmq": "^5.56.5",
    "byte-size": "^9.0.1",
    "cors": "^2.8.5",
    "countries-list": "^3.1.1",
    "dataloader": "^2.2.3",
    "email-templates": "^12.0.3",
    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "filesize": "^11.0.2",
    "graphql": "^16.11.0",
    "graphql-redis-subscriptions": "^2.7.0",
    "graphql-ws": "^6.0.5",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "keyv": "^5.3.4",
    "nanoid": "^5.1.5",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "pug": "^3.0.3",
    "qrcode": "^1.5.4",
    "redis": "^5.6.0",
    "ws": "^8.18.2",
    "zod": "^3.25.67"
  },
  "trustedDependencies": [
    "@parcel/watcher"
  ]
}
