# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# eSIM Go API Configuration
ESIM_GO_API_KEY=your-esim-go-api-key
ESIM_GO_BASE_URL=https://api.esim-go.com/v2.5
ESIM_GO_WEBHOOK_SECRET=your-webhook-secret
ESIM_GO_MODE=mock # Set to 'production' for real API calls

# Server Configuration
PORT=4000
NODE_ENV=development
DASHBOARD_URL=http://localhost:3000

# Database Configuration (for direct database access if needed)
DATABASE_URL=postgresql://postgres:password@localhost:5432/esim_go

# Redis Configuration (optional, for caching and subscriptions)
REDIS_URL=redis://localhost:6379

# JWT Configuration (legacy support)
JWT_SECRET=your-jwt-secret

# Logging
LOG_LEVEL=info

CHECKOUT_JWT_SECRET=secret-string

# eSIM Go Mode Configuration
ESIM_GO_MODE=mock # Options: mock, production

# Email Service Configuration
EMAIL_MODE=ses # Options: mock, ses

# AWS SES Configuration (required when EMAIL_MODE=ses)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
SES_EMAIL_DOMAIN=hiiloworld.com # Use hiiilo.yarinsa.me for development
SES_FROM_EMAIL= # Optional: Override default noreply@{domain} email
SES_CONFIGURATION_SET= # Optional: for tracking email metrics

# EasyCard Payment Configuration
EASY_CARD_PRIVATE_API_KEY=your-easycard-authorization-key
EASYCARD_TERMINAL_ID=your-terminal-id
EASYCARD_API_KEY=your-api-key
EASYCARD_WEBHOOK_SECRET=your-webhook-secret
EASYCARD_ENVIRONMENT=test # Options: test, production, mock
EASYCARD_MOCK_BASE_URL=http://localhost:4012 # Used when EASYCARD_ENVIRONMENT=mock
