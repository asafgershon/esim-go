{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**",
        "*.ts",
        "*.js",
        "*.json",
        "!dist/**",
        "!node_modules/**"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "build/**"
      ]
    },
    "build:packages": {
      "dependsOn": [],
      "inputs": [
        "packages/*/src/**",
        "packages/*/*.ts",
        "packages/*/*.js",
        "packages/*/*.json"
      ],
      "outputs": [
        "packages/*/dist/**"
      ]
    },
    "dev": {
      "cache": false,
      "inputs": [
        "src/**",
        "*.ts",
        "*.js",
        "*.json",
        "!dist/**",
        "!node_modules/**"
      ],
      "persistent": true
    },
    "dev:all": {
      "cache": false,
      "dependsOn": [
        "build:packages"
      ],
      "persistent": true
    },
    "dev:server": {
      "cache": false,
      "inputs": [
        "server/src/**",
        "server/*.ts",
        "server/*.js",
        "server/*.json"
      ],
      "persistent": true
    },
    "dev:workers": {
      "cache": false,
      "dependsOn": [
        "build:packages"
      ],
      "inputs": [
        "workers/src/**",
        "workers/*.ts",
        "workers/*.js",
        "workers/*.json"
      ],
      "persistent": true
    },
    "lint": {
      "inputs": [
        "src/**",
        "*.ts",
        "*.js",
        ".eslintrc*",
        "!dist/**",
        "!node_modules/**"
      ]
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**",
        "test/**",
        "*.test.*",
        "*.spec.*",
        "!dist/**",
        "!node_modules/**"
      ]
    },
    "typecheck": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**",
        "*.ts",
        "!dist/**",
        "!node_modules/**"
      ]
    }
  },
  "ui": "stream"
}